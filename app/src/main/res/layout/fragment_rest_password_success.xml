<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Confirmation Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#E6F4EA"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Checkmark Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/password_changed_successfully"
            android:src="@drawable/check_circle"
            app:tint="#4CAF50" />

        <!-- Success Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@string/password_changed"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Additional Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="@string/you_can_now_use_your_new_password_to_login_to_your_account"
            android:textColor="#666"
            android:textSize="14sp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#704F38"
            android:padding="12dp"
            android:textAllCaps="false"
            android:text="@string/login"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
